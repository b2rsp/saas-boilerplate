{
  "name": "@repo/api",
  "version": "1.0.0",
  "description": "Obby api backend",
  "author": "Obby team",
  "main": "src/index.ts",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=8.16.x",
    "yarn": "*"
  },
  "scripts": {
    "build": "rimraf dist && tsc --build && yarn babel dist --out-dir dist",
    "dev": "ts-node-dev -r tsconfig-paths/register ./src/index.ts",
    "start": "yarn build && pm2 start ./dist/index.js -i 3 --env production --name \"api\"",
    "startMessages": "yarn build && pm2 start ./dist/startup/messages.js -i 3 --env production --name \"messages\"",
    "startWorker": "yarn build && pm2 start ./dist/worker/index.js --env production --name \"worker\"",
    "startWorkerUI": "yarn build && pm2 start ./dist/worker/ui.js --env production --name \"workerui\"",
    "deploy": "yarn install && yarn build && pm2 reload api && pm2 reload messages && pm2 reload worker && pm2 reload workerui",
    "worker:dev": "nodemon --exec babel-node ./src/worker/index.js",
    "cron:dev": "nodemon --exec babel-node ./src/cronjobs/index.js",
    "messages:dev": "nodemon --exec babel-node ./src/startup/messages.js"
  },
  "keywords": [],
